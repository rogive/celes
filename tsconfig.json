{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "es6",
    "target": "ES6",
    "jsx": "react",
    "allowJs": true
  },
    "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "spec"
  ]
}